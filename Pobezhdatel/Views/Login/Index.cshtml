@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Pobezhdatel.Models.GameModel

<div class="container">
    <div class="login-container">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title">Создать новую комнату или войти в существующую</h3></div>
            <div class="panel-body">
                @using (Html.BeginForm("LogIn", "Login", FormMethod.Post, new { @class = "login-form" }))
                {
                    @* If there are an error in this field add class to show error state *@
                    <div class="form-group @( ViewData.ModelState.Values.Any() && ViewData.ModelState.Values.First().Errors.Count > 0 ? "has-error" : "") )">
                        @Html.LabelFor(q => q.RoomName, "Название новой или существующей комнаты")
                        @Html.TextBoxFor(q => q.RoomName, new { @class = "form-control", placeholder = "Введите название комнаты", autofocus = "autofocus" })
                        @Html.ValidationMessageFor(q => q.RoomName)
                    </div>
                    <div class="form-group @( ViewData.ModelState.Values.Any() && ViewData.ModelState.Values.Last().Errors.Count > 0 ? "has-error" : "" )">
                        @Html.LabelFor(q => q.PlayerName, "Ваше имя в комнате")
                        @Html.TextBoxFor(q => q.PlayerName, new { @class = "form-control", placeholder = "Введите Ваше имя" })
                        @Html.ValidationMessageFor(q => q.PlayerName)
                    </div>
                    <button type="submit" class="btn btn-default">Войти в комнату</button>
                }
            </div>
        </div>
    </div>
</div>